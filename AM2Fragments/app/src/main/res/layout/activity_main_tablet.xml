<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isil.am2fragments.MainTabletActivity">
    <fragment
        android:id="@+id/fragmentEvents"
        android:name="com.isil.am2fragments.ui.fragments.EventFragment"
        tools:layout="@layout/fragment_event"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toLeftOf="@+id/fragmentDetails"
        android:layout_marginRight="1dp"
        app:layout_constraintVertical_bias="0.0" />

    <fragment
        android:id="@+id/fragmentDetails"
        android:name="com.isil.am2fragments.ui.fragments.EventDetailsFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/fragmentEvents"
        tools:layout="@layout/fragment_event_details" />

</android.support.constraint.ConstraintLayout>
